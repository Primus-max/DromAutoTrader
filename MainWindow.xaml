                <TabItem Header="Каналы">
                    <StackPanel>

                        <Frame Name="ChannelFrame" NavigationUIVisibility="Hidden" />
                        <!--<Button Click="Edit_Click"/>-->
                    </StackPanel>

                </TabItem>
                <TabItem Header="Брэнды">
                    <DockPanel Margin="20">
                        <DockPanel.Resources>
                            <CollectionViewSource
                                x:Key="BrandsCollection"
                                Filter="BrandCollection_Filter"
                                Source="{Binding Brands}" />
                        </DockPanel.Resources>
                        <StackPanel DockPanel.Dock="Top">
                            <TextBlock
                                Margin="20,20"
                                FontSize="14"
                                Text="Этот раздел отвечает за добавление, удаление, или изменения данных о поставщике" />
                            <Button
                                Width="200"
                                Margin="20,16,0,30"
                                HorizontalAlignment="Left"
                                Command="{Binding AddSupplierCommand}"
                                Content="Добавить" />
                        </StackPanel>

                        <StackPanel
                            Height="60"
                            Margin="10,10,0,10"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Top"
                            Orientation="Horizontal">
                            <!--<materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                Margin="10"
                                Foreground="Black"
                                Kind="Magnify" />-->
                            <TextBox
                                x:Name="FilterSearchParameterTextBox"
                                MinWidth="300"
                                Margin="0"
                                Padding="10"
                                VerticalAlignment="Center"
                                materialDesign:HintAssist.Hint="Поиск про брэнду"
                                materialDesign:TextFieldAssist.DecorationVisibility="Visible"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                materialDesign:TextFieldAssist.HasFilledTextField="True"
                                materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                materialDesign:TextFieldAssist.LeadingIcon="Search"
                                BorderThickness="0"
                                FontSize="16"
                                TextChanged="FilterSearchParameterTextBox_TextChanged" />

                            <StackPanel
                                Margin="40,0,0,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,10,0"
                                    FontSize="14"
                                    FontWeight="Heavy"
                                    Foreground="#4b4b4b"
                                    Text="Всего брэндов:" />
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="Heavy"
                                    Foreground="#8a8a8a"
                                    Text="{Binding TotalBrandCount}" />
                            </StackPanel>
                        </StackPanel>
                        <!--  Контейнер для списка поставщиков  -->
                        <DataGrid
                            x:Name="BrandsDataGrid"
                            AutoGenerateColumns="False"
                            DockPanel.Dock="Top"
                            IsReadOnly="False"
                            ItemsSource="{Binding Source={StaticResource BrandsCollection}}"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.VirtualizationMode="Recycling">
                            <DataGrid.Columns>
                                <!--  Определите ваши колонки здесь  -->
                                <DataGridTextColumn
                                    Width="150"
                                    Binding="{Binding Name}"
                                    Header="Название" />
                                <DataGridTemplateColumn Width="150" Header="Адрес шаблона">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <!--  Здесь можете разместить ComboBox для адреса шаблона  -->
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn
                                    Width="150"
                                    Binding="{Binding DefaultImage}"
                                    Header="Заглушка" />
                            </DataGrid.Columns>
                        </DataGrid>

                    </DockPanel>
                </TabItem>
                <TabItem Header="Ставки">
                    <TextBlock Margin="10" Text="Раздел ставок" />
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</Window>
