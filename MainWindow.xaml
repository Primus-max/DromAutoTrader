<Window
    x:Class="DromAutoTrader.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DromAutoTrader"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DromAutoTrader.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="450"
    d:DesignHeight="1200"
    d:DesignWidth="1200"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Border Padding="16">

            <TabControl
                HorizontalContentAlignment="Left"
                ScrollViewer.CanContentScroll="True"
                Style="{StaticResource MaterialDesignTabControl}">
                <TabControl.Template>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Здесь разместите вкладки (TabItems)  -->
                            <TabPanel Grid.Row="0" IsItemsHost="True" />

                            <!--  Здесь разместите содержимое выбранной вкладки  -->
                            <Border Grid.Row="1">
                                <ContentPresenter ContentSource="SelectedContent" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </TabControl.Template>

                <!--  Здесь добавьте ваши TabItem  -->
                <TabItem Header="Объявления">
                    <TextBlock Margin="10" Text="Раздел объявлениЙ" />
                </TabItem>
                <TabItem Header="Загрузить прайс">
                    <StackPanel>
                        <TextBlock
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            Foreground="White"
                            Text="В этом разделе происходит заргурзка файлаи дальнейшее размещение информации в каналах, для этого надо:" />
                        <StackPanel
                            Height="60"
                            Margin="20,20,0,0"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,20,0"
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="1." />
                            <Button
                                Width="240"
                                Command="{Binding SelectFilePriceCommand}"
                                Content="Выбрать прайс"
                                Cursor="Hand" />
                        </StackPanel>

                        <StackPanel
                            Height="60"
                            Margin="20,20,0,0"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,20,0"
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="2." />
                            <ComboBox
                                Width="240"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Stretch"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                <ComboBoxItem IsEnabled="False" IsSelected="True">
                                    <TextBlock>Выбрать компанию</TextBlock>
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <TextBlock>Компания 1</TextBlock>
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <TextBlock>Компания 2</TextBlock>
                                </ComboBoxItem>
                                <!--  Добавьте остальные элементы как ComboBoxItem  -->
                            </ComboBox>
                        </StackPanel>


                        <StackPanel
                            Height="60"
                            Margin="20,20,0,0"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,20,0"
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="3." />
                            <ComboBox
                                Width="240"
                                IsEditable="True"
                                StaysOpenOnEdit="False"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                <ComboBoxItem IsSelected="True">Выбрать каналы</ComboBoxItem>
                                <ListBox SelectionMode="Multiple">
                                    <ListBoxItem>Канал 1</ListBoxItem>
                                    <ListBoxItem>Канал 2</ListBoxItem>
                                    <ListBoxItem>Канал 3</ListBoxItem>
                                </ListBox>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel
                            Height="60"
                            Margin="20,20,0,0"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,20,0"
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="4." />
                            <StackPanel>
                                <TextBlock Foreground="White">
                                    <Run Text="Убирать в архив старые объявления и доставать из архива ранее загруженные?" />
                                    <LineBreak />
                                    <Run Text="По умолчанию Да" />
                                </TextBlock>
                                <CheckBox
                                    Width="Auto"
                                    Margin="10"
                                    HorizontalAlignment="Left">
                                    <Label Content="Нет" />
                                </CheckBox>
                            </StackPanel>
                        </StackPanel>
                        <Button
                            Width="270"
                            Margin="50,20,0,0"
                            HorizontalAlignment="Left"
                            Background="#877200"
                            Command="{Binding RunAllWorkCommand}"
                            Content="Поехали" />

                        <DataGrid
                            x:Name="ProcessPostingDataGrid"
                            Margin="30"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding Suppliers}"
                            SelectedItem="{Binding SelectedSupplier}">
                            <DataGrid.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding EnterKeyPressedCommand}" />
                            </DataGrid.InputBindings>
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Id}" Header="Файл" />
                                <DataGridTextColumn
                                    MinWidth="300"
                                    Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Статус" />
                                <DataGridTemplateColumn Header="Канал" />
                                <DataGridTemplateColumn Header="Процесс" />
                                <DataGridTemplateColumn Header="Всего" />
                                <DataGridTemplateColumn Header="Дата размещения" />
                                <DataGridTemplateColumn Header="Получить файл" />
                            </DataGrid.Columns>
                        </DataGrid>


                    </StackPanel>


                </TabItem>
                <!--<TabItem Header="Поставщики">

                    <StackPanel Margin="20">
                        <TextBlock
                            Margin="20,20"
                            FontSize="14"
                            Text="Этот раздел отвечает за добавление, удаление, или изменения данных о поставщике" />


                -->
                <!--  Кнопка добавления нового поставщика  -->
                <!--
                        <Button
                            Width="200"
                            Margin="20,16,0,30"
                            HorizontalAlignment="Left"
                            Command="{Binding AddSupplierCommand}"
                            Content="Добавить" />

                -->
                <!--  Контейнер для списка поставщиков  -->
                <!--
                        <DataGrid
                            x:Name="SupplierDataGrid"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding Suppliers}"
                            SelectedItem="{Binding SelectedSupplier}">
